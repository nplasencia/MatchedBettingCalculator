{% extends 'base.html.twig' %}

{% block title %}Add new exchange or update{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Add new Exchange or update:</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form, {'action': path('store_exchange'), 'method': 'GET'}) }}

    <div class="form-group">
        <label class="control-label col-lg-4" for="name">Name</label>
        <div class="col-lg-4">
            {{ form_widget(form.name) }}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-lg-4" for="url">Url</label>
        <div class="col-lg-4">
            {{ form_widget(form.url) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-8">
            {{ form_widget(form.save) }}
        </div>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
